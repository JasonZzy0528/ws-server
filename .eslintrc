{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
  ],
  "globals":{
    "WebSocket": true,
    "document": true,
    "window": true,
    "fetch": true,
    "CKEDITOR": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": [
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": 1
  }
}
